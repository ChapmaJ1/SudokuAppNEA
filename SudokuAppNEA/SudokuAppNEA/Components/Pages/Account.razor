@page "/account"
@inject NavigationManager NavigationManager
@inject UserClient UserClient
@inject DBCaller DatabaseCaller

<h1>Register an Account</h1>
<EditForm Model="@user" FormName="Login" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <div class="form-container">
        <div>
            <label class="form-label" for="username">Username:</label>
            <InputText id="username" @bind-Value="user!.Username" class="form-control" />
        </div>
        <div>
            <label class="form-label" for="password">Password:</label>
            <InputText id="password" @bind-Value="user.Password" type="password" class="form-control" />
        </div>
        <div>
            <button class="btn-primary" type="submit" style="margin-top: 50px;">Submit</button>
        </div>
    </div>
</EditForm>

@code {
    [SupplyParameterFromForm]
    private User? user { get; set; } = new User();

    private void HandleSubmit()
    {
        UserClient.User = user!;
        int userId = DatabaseCaller.AddUser(user!.Username, user.Password);  // find user in database if record exists, otherwise add a new user
        UserClient.User!.Id = userId;  // user ID
        SetUserSettings();
        NavigationManager.NavigateTo($"/menu");
    }

    private void SetUserSettings()
    {
        DatabaseCaller.SetUserSettings(UserClient.User!.Id);
        UserClient.MistakeDetection = "On";
        UserClient.SaveScores = "On";
    }
}
